<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:ignore="SpeakableTextPresentCheck"
    tools:context=".ui.NotificationsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bgr_top"/>

        <ListView
            android:id="@+id/lvNotification"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:divider="@null"
            android:dividerHeight="15dp"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="-80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Updates"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:paddingLeft="20dp"
                android:fontFamily="@font/nunito"/>
            <TextView
                android:id="@+id/txtOrderUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read All (20)"
                android:layout_marginLeft="105dp"
                android:textColor="@color/darkblue"
                android:textSize="16sp"
                android:textStyle="italic"
                android:fontFamily="@font/nunito"/>
        </LinearLayout>
        <ListView
            android:id="@+id/lvOrder"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:divider="@null"
            android:dividerHeight="5dp"/>
    </LinearLayout>
</ScrollView>