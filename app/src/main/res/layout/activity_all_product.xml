<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".All_product">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkblue"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:src="@drawable/back_white"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/logo" />
        <ImageView
            android:id="@+id/imvCart"
            android:layout_width="29dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="13dp"
            android:src="@drawable/cart" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bgr_white_20"
            android:drawableLeft="@drawable/search_32x32"
            android:fontFamily="@font/nunito"
            android:focusableInTouchMode="false"
            android:hint="Search..."
            tools:ignore="TouchTargetSizeCheck"
            android:paddingLeft="10dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/darkblue"
        android:gravity="center_vertical"
        android:weightSum="10"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito"
            android:text="1008 Product"
            android:textSize="3mm"
            android:layout_weight="8"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"/>

        <ImageButton
            android:layout_weight="1"
            android:id="@+id/imgbtnGrid"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            android:src="@drawable/grid"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:gravity="end"
            android:id="@+id/imgbtnFilter"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginRight="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/filter"
            android:layout_weight="1"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    </LinearLayout>
    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentProduct"/>

</LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_full1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>