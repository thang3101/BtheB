<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr"
    android:orientation="vertical"
    tools:context=".Delivery">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bgr_top"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back_white"/>
        <TextView
            android:id="@+id/txtvoucher_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="DELIVERY"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:fontFamily="@font/nunito"
            />
    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="-100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bgr_white1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DELIVERY INFORMATION"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkblue"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/nunito"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We deliver to over 227 countries"
                        android:textSize="18sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/nunito"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Collect from over 670 UK Stores"
                        android:textSize="18sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/nunito"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/local" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="TRACK MY ORDER"
                        android:textColor="@color/darkblue"
                        android:textSize="22sp"
                        android:layout_marginLeft="-18dp"
                        android:fontFamily="@font/nunito"/>
                    <Button
                        android:id="@+id/btnTrackOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/corner_button_tracknow"
                        android:backgroundTint="@color/darkblue"
                        android:text="TRACK NOW"
                        android:textColor="@color/white2"
                        android:textSize="16dp"
                        android:layout_marginLeft="20dp"
                        android:padding="15dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/nunito"/>

                    <!--        <Button-->
                    <!--            android:layout_width="wrap_content"-->
                    <!--            android:layout_height="wrap_content"-->
                    <!--            android:background="@color/darkblue"-->
                    <!--            android:layout_marginLeft="20sp"-->
                    <!--            android:text="TRACK NOW"-->
                    <!--            android:textColor="@color/white2"-->
                </LinearLayout>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/trash" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW! UNLIMITED DELIVERY"
                        android:textStyle="bold"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/nunito"
                        android:textSize="19dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£ 9.99 ( for 12 months )"
                        android:fontFamily="@font/nunito"
                        android:textSize="18dp"
                        android:textColor="@color/darkblue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/darkblue"
                        android:text="Sign up for Unlimited UK Next Day Delivery for the whole year." />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/nunito"
                        android:textSize="18dp"
                        android:text="Only available on orders through the app.
No minimum order value. No hassle." />
                </LinearLayout>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:src="@drawable/line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/truck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UK STANDARD DELIVERY"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/darkblue"
                        android:textStyle="bold"
                        android:textSize="19dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/nunito"
                        android:text="£ 3.99 ( FREE on orders over £ 70 )"
                        android:textSize="18dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/nunito"
                        android:textSize="18dp"
                        android:text="Usually delivered within 3-5 working days.
Select UK Standard at the checkout." />

                </LinearLayout>

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/truck2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkblue"
                        android:text="EXPRESS 2 DAY DELIVERY"
                        android:fontFamily="@font/nunito"
                        android:textStyle="bold"
                        android:textSize="19dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/darkblue"
                        android:text="£ 4.99"
                        android:textSize="18dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/nunito"
                        android:textSize="18dp"
                        android:text="Need it quick ? Order now, choose ' Express 2 day
delivery ' to get your order within 2 days . Orders
placed before midnight each day will be 2 days
from the next day!" />

                </LinearLayout>

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/truck3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/darkblue"
                        android:text="€ UK NEXT DAY DELIVERY"
                        android:textStyle="bold"
                        android:textSize="19dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/darkblue"
                        android:text="£ 5.99- £ 6.99"
                        android:textSize="18dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/darkblue"
                        android:textSize="18dp"
                        android:text="STANDARD NEXT DAY ( Delivered by Hermes )
Order by 6pm
" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkblue"
                        android:fontFamily="@font/nunito"
                        android:textSize="18dp"
                        android:text="PREMIUM NEXT DAY
Get updates via SMS, email on the status of your
order and receive a 1 hour delivery window , plus
the option to track." />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>




</LinearLayout>